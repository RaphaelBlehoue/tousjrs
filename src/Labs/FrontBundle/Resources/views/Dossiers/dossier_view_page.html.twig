{% extends '::base.html.twig' %}
{% block title %}{{ article.name }}{% endblock %}
{% block meta %}
    <link rel="canonical" href="{{ url('page_dossier_view', {'rubrique':article.item.slug, 'slug':article.slug }) }}" />
    <!-- sample facbook meta tags -->
    <meta property="og:url" content="{{ url('page_dossier_view', {'rubrique':article.item.slug, 'slug':article.slug }) }}" />
    <meta property="og:title" content="{{ article.name }}" />
    <meta property="og:type" content="article" />
    <meta property="og:description" content="{{ article.content|truncate(200, true, '...')|striptags }}" />
    <meta property="og:image"  content="{{ absolute_url(article.medias.0.assertPath|imagine_filter('thumb_facebook') ) }}" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:site_name"  content="{{ 'touslesjours CI' }}" />
    <meta property="og:locale"  content="fr_FR"/>
    <meta property="og:updated_time" content="{{ article.created|date('d, m Y') }}" />
    <meta property="og:locale:alternate" content="en_US" />
    <meta property="og:rich_attachment" content="true" />
    <meta property="og:image:type" content="image/jpeg">
    <meta property="og:image:width" content="600">
    <meta property="og:image:height" content="315">
    <meta property="fb:app_id" content="1651341078293386">
    <!--- sample twitter card meta tags --->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@touslesjoursci">
    <meta name="twitter:creator" content="@touslesjoursci">
    <meta name="twitter:title" content="{{ article.name }}">
    <meta name="twitter:description" content="{{ article.content|truncate(140, true, '...')|striptags|raw }}">
    <meta name="twitter:image" content="{{ absolute_url(article.medias.0.assertPath|imagine_filter('thumb_article_view') ) }}">
    <meta name="twitter:image:alt" content="{{ article.legend }}">

{% endblock %}

