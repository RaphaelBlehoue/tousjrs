{% extends '::base.html.twig' %}
{% block title %}{{ 'TousLesJours.ci - Actualités et Infos en Côte d\'ivoire et dans le monde' }}{% endblock %}
{% block stylesheets %}{% endblock %}
{% block submenu %}
    <div class="heading">
        <i class="fa fa-video-camera"></i><span>{{ 'Touslesjours tv'|upper }}</span>
        <h2 class="">{{ 'Videos'|upper }}</h2>
    </div>
{% endblock %}
{% block body %}
    <div class="container">
        <section class="block remove-top bg-section">
            <div class="first-container">
                <div class="first-row">
                    <div class="col-md-8 column">
                        {% for video in youtube %}
                        <div class="col-md-6">
                            <div class="active post-style4" itemprop="video" itemscope itemType="http://schema.org/BlogPosting">
                                <div class="our-video-box">
                                    <img itemprop="image" src="{{ video.Thumb.high.url }}" alt="{{ video.Channel }}">
                                    <div class="video-box-title">
                                        <a itemprop="url" title="{{ video.Title }}" href="{{ path('video_view', {'id' : video.Id}) }}">
                                            <i class="fa fa-play"></i>
                                        </a>
                                    </div>
                                    <div class="post-metas4">
                                        <div class="date">
                                            <div class="cat">
                                                <a title="" href="#" itemprop="url">{{ video.Published|localizeddate('none', 'none', null, null, 'd MMMM Y') }} | {{ video.Channel }}</a>
                                            </div>
                                        </div>
                                    </div>
                                    <h4 itemprop="name">{{ video.Title|capitalize|truncate(50, true, '...') }}</h4>
                                </div><!-- Our Video Sec -->
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <aside class="col-md-4 column">
                        {{ render(controller('LabsFrontBundle:Default:getflashInfos')) }}
                        <div class="widget">
                            <ul class="review-widget">
                                <div class="post-style6" itemtype="http://schema.org/BlogPosting" itemscope="">
                                    <div class="post-thumb6">
                                        <a href="http://www.agrsici.com" target="_blank"><img itemprop="image" src="{{ asset('images/resource/pub.jpg') }}" alt="" /></a>
                                    </div>
                                </div><!-- Post Style 8 -->
                            </ul>
                        </div>
                        {{ render(controller('LabsFrontBundle:Default:getRecentArticle')) }}
                        {{ render(controller('LabsFrontBundle:Default:getSideBarvideo')) }}
                        {{ render(controller('LabsFrontBundle:Default:getDossierInfo')) }}
                    </aside>
                </div>
            </div>
        </section>
    </div>
{% endblock %}