                        {% endfor %}
                        <!--<span class="td-video-play-ico td-video-small">
                            <img width="20" height="20" class="td-retina" src="{{ asset('images/icons/video-small.png') }}" alt="video"/>
                        </span>-->
                    </a>
                </div>

                <div class="item-details">
                    <h3 class="entry-title td-module-title">
                        <a href="{{ path('page_view', {'slug': arts.slug }) }}" rel="{{ arts.item.name }}" title="{{ arts.name }}">{{ arts.name|truncate('120', false, '...')|striptags|raw }}</a>
                    </h3>
                    <div class="td-module-meta-info">
                        <span class="td-post-date">
                             <time class="entry-date updated td-module-date" datetime="{{ arts.created.date }}" title="{{ arts.created.date }}">{{ arts.created|date('H') ~'h'~ arts.created|date('m') }} - {{ arts.created|localizeddate('none', 'none', null, null, 'dd MMMM Y') }}</time>
