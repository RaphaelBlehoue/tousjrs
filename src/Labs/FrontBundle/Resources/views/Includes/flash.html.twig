    {% for flash in flashs %}
            <div itemtype="http://schema.org/BlogPosting" itemscope="" class="post-style7">
                    <div class="post-thumb7">
                        <img alt="{{ flash.name }}" src="{{ flash.assertPath|imagine_filter('thumb_flash') }}" itemprop="image" />
                        <a href="" title="" itemprop="url" class="img-link"></a>
                    </div>
                    <div class="post-detail7">
                        <div class="date">
                            <ul>
                                    <li><a title="" href="#" content="{{ flash.updated|ago}}" itemprop="datePublished" style="color: #fff;">{{ flash.updated|ago}} </a></li>
                            </ul>
                        </div>
                        <h3 itemprop="headline"><a title="" href="" itemprop="url">{{ flash.name|truncate(35, true, '...') }}</a></h3>
                    </div>
            </div><!-- Post Style 7 -->
    {% endfor %}
