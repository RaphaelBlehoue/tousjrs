{% if youtube|length > 0 %}
<section class="block remove-top bg-section m-2">
    <div class="container">
        <div class="heading pt-2">
            <i class="fa fa-video-camera"></i><span>{{ 'A la une'|upper }}</span>
            <h2>{{ 'Touslesjours Tv'|upper }}</h2>
        </div><!-- Heading -->
        <div class="new-sec pl-2">
            {% for video in youtube %}
                <div class="col-md-4">
                <div class="post-style3" itemscope itemType="http://schema.org/BlogPosting">
                    <a href="{{ path('video_view', {'id' : video.Id}) }}" title="{{ video.Title }}">
                        <img itemprop="image" src="{{ video.Thumb.high.url }}" alt="{{ video.Channel }}" />
                    </a>
                    <div class="post-detail3">
                        <div class="cat">
                            <a title="{{ video.Channel }}" href="https://www.youtube.com/channel/{{ video.ChannelId }}" itemprop="url" target="_blank">{{ video.Channel }}</a>
                        </div>
                        <h3 itemprop="headline"><a itemprop="url" href="{{ path('video_view', {'id' : video.Id}) }}" title="{{ video.Title }}">{{ video.Title|truncate('30',true,'...') }}</a></h3>
                        <div class="date">
                            <ul>
                                <li><a title="" href="#" content="December-29-2014" itemprop="datePublished">{{ video.Published|date('d, m Y') }}</a></li>
                                <!--<li>BY <a title="" href="#" itemprop="url"> ADMIN</a></li>-->
                            </ul>
                        </div>
                    </div>
                    <span><i class="fa fa-play"></i></span>
                </div><!-- Post Style 3 -->
            </div>
            {% endfor %}
            <div class="clear"></div>
            <div class="col-md-12 m-5 pl-2 background-style" style="border-top: 3px solid #16212c; display: block;">
                <a href="">
                    <h5 class="text-center" style="color: #16212c; font-weight: 700;">
                        {{ 'Consultez la rubriques Video'}}
                    </h5>
                </a>
            </div>
        </div>
    </div>
</section>
{% endif %}