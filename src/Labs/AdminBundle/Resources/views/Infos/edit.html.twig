{% extends 'LabsAdminBundle::template.html.twig' %}
{% block Title %}  {{ 'Gestion des flash informations - Modification'|capitalize }} {% endblock %}
{% block body %}
    <!-- Main content -->
    <!-- Form horizontal -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">{{ 'Gestion des flash informations - Edition' }}</h5>
            <div class="heading-elements">
                <div class="icons-list">
                    <a href="{{ path('info_index') }}" class="btn btn-primary btn-labeled"><b><i class="icon-menu7"></i></b> Afficher la liste</a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            {{ form_start(form, { 'action': path('info_edit', {'id' : info.id}), attr : { 'class':'form-horizontal','novalidate': 'novalidate'}}) }}
            <fieldset class="content-group col-lg-10 col-md-offset-2">

                <legend class="text-bold">Modifier une flash d'information</legend>


                <div class="form-group compteur">
                    <label class="control-label col-lg-3">Contenu du flash d'information</label>
                    <div class="col-lg-9">
                        {{ form_row(form.content) }}
                        <strong id="compteur">0 mots - 0 Caractere / 160</strong>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3">Le dégré du flash</label>
                    <div class="col-lg-3">
                        {{ form_row(form.status) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3">Status du flash</label>
                    <div class="col-lg-3">
                        {{ form_row(form.online) }}
                    </div>
                </div>

                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Ajouter le flash <i class="icon-database-add position-right"></i></button>
                </div>

            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block themes %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/plugins/forms/styling/uniform.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/pages/form_inputs.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/core/libraries/jquery_ui/interactions.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/plugins/forms/selects/select2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/pages/form_select2.js') }}"></script>
{% endblock %}