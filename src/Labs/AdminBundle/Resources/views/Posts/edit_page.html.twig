{% extends 'LabsAdminBundle::layout.html.twig' %}
{% block Title %}  {{ 'Gestion des Articles - Edition'|capitalize }} {% endblock %}
{% block stylesheets %}

{% endblock %}
{% block body %}
    <!-- Main content -->
    <!-- Form horizontal -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">{{ 'Gestion des Articles - Edition' }}</h5>
            <div class="heading-elements">
                <div class="icons-list">
                    <a href="{{ path('post_index') }}" class="btn btn-primary btn-labeled"><b><i class="icon-menu7"></i></b> Afficher la liste</a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            {{ form_start(form, { 'action': path('post_edit', {'id' : post.id}), attr : { 'class':'form-horizontal', 'novalidate': 'novalidate'}}) }}
            <fieldset class="content-group col-lg-12">

                <legend class="text-bold">Edition de post - {% if post.name|length > 0 %}{{ post.name }}{% endif %}</legend>

                <div class="form-group">
                    <label class="control-label col-lg-3">Rubrique Associée à l'article</label>
                    <div class="col-lg-4">
                        {{ form_row(form.item) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-3">Titre de l'article</label>
                    <div class="col-lg-9">
                        {{ form_row(form.name) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-lg-3">Status de l'article</label>
                    <div class="col-lg-3">
                        {{ form_row(form.online) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-lg-3">Ecrivez votre article ici</label>
                    <div class="clearfix"></div>
                    <div class="col-lg-12">
                        {{ form_row(form.content) }}
                    </div>
                </div>

                <!-- File limits -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title">Inserez des fichiers dans le gestion de Media</h5>
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                                <li><a data-action="reload"></a></li>
                                <li><a data-action="close"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">
                        <p class="text-semibold">Importez les images ou photos de l'articles</p>
                        <div action="{{ path('post_edit', {'id' : post.id }) }}" class="dropzone" id="dropzone-upload"></div>
                    </div>
                </div>
                <!-- /file limits -->
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Enregistrer <i class="icon-database-add position-right"></i></button>
                </div>

            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block Core_JS_files %}
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/plugins/uploaders/dropzone.min.js') }}"></script>
{% endblock %}

{% block themes %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/plugins/forms/styling/uniform.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/pages/form_inputs.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/core/libraries/jquery_ui/interactions.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/plugins/forms/selects/select2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/labslimitlesstpl/assets/js/pages/form_select2.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/dropzone/main.js') }}"></script>
{% endblock %}